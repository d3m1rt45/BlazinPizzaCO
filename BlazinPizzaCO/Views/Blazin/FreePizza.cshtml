@model BlazinPizzaCO.ViewModels.ToppingViewModel

@{
    ViewBag.Title = "Free Pizza";
}

<section id="FreePizza">
    <div id="PageContainer" class="container-fluid">
        <div id="PageRow" class="row">

            <div id="ExceptBasket" class="col-xl-10 offset-xl-1">
                <article class="PageHead col-xl-12">
                    <a class="BackButton" href="@Url.Action("MyPoints")">BACK</a>
                    <h2 class="Header">SELECT TOPPINGS FOR YOUR <em>FREE PIZZA</em></h2>
                </article><!--/#Banner-->

                <div class="col-xl-12">
                    @Html.Partial("_ToppingsPartial")
                </div>

                <div class="col-12 d-flex justify-content-center">
                    <a class="Done" href="@Url.Action("PizzaDone", new { pizzaID = Model.Pizza.ID })">DONE</a>
                </div>
            </div><!--/#ExceptBasket-->

        </div><!--/#PageRow-->
    </div><!--#PageContainer-->
</section><!--/#PizzaTopping-->
