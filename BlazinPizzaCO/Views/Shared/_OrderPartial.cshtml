@model BlazinPizzaCO.Models.Order


@if (Model.Pizzas.Any())
{
    foreach (var p in Model.Pizzas.Where(o => o.Done))
    {
        <div class="Pizza col-xl-10 offset-xl-1">
            <h4>(£@p.GetPrice()) @p.Inches.ToString() Pizza with</h4>
            <p>
                @if (p.Toppings.Any())
                {
                    foreach (var t in p.Toppings)
                    {
                        if (t != p.Toppings.Last())
                        {
                            <span>@t.Name, </span>
                        }
                        else
                        {
                            <span>@t.Name</span>
                        }
                    }
                }
                else
                {
                    <span>No Toppings (Tomato Sauce and Cheese Only)</span>
                }
            </p>
        </div>
    }
}

@if (Model.SidesPerOrder.Any() && Model.DrinksPerOrder.Any())
{
    <div class="Sides offset-xl-1 col-xl-5">
        <h4>Sides</h4>
        <ul>
            @foreach (var s in Model.SidesPerOrder)
            {
                <li>@s.Side.Name (@s.Side.Price)</li>
            }
        </ul>
    </div>
    <div class="Drinks col-xl-5">
        <h4>Drinks</h4>
        <ul>
            @foreach (var d in Model.DrinksPerOrder)
            {
            <li>@d.Amount @d.Drink.Name</li>
            }
        </ul>
    </div>
}
