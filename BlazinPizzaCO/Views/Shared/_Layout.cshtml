<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="#">
            <div id="Banner" class="justify-content-center">
                <h3 id="BannerText" class="d-block">BLAZIN</h3>
                <h3 id="BannerText" class="d-block">PIZZA CO.</h3>
            </div>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#NavbarCollapse">
        </button>
        <div id="NavbarCollapse" class="collapse navbar-collapse text-center">
            <div id="NavbarNav" class="ml-auto navbar-nav">
                <a class="nav-item nav-link active" href="#">ORDER </a>
                <a class="nav-item nav-link" href="#">SIGN IN</a>
                <a class="nav-item nav-link" href="#">REGISTER</a>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script type="text/javascript">
        //Navigation Link "Active"
        $(".nav-link").click(function () {
            $(".nav-link.active").removeClass("active");
            $(this).addClass("active");
        });

        //Banner Hover Function
        $("#Banner").mouseover(function () {
            $(this).children().css("color", "#E2E2E2");
        });
        $("#Banner").mouseout(function () {
            $(this).children().css("color", "#AFAFAF");
        });
    </script>
</body>
</html>
