@model BlazinPizzaCO.ViewModels.ToppingViewModel


    <article id="Toppings" class="row">

        @foreach (var t in Model.Toppings)
        {
            if (Model.Pizza.Toppings.Contains(t))
            {
                <div class="col-3">
                    <a class="Selected" href="@Url.Action("AddTopping", new { pizzaID = Model.Pizza.ID, toppingName = t.Name })">@t.Name</a>
                </div>
            }
            else if (Model.Pizza.Toppings.Count < 7)
            {
                <div class="col-3">
                    <a class="Available" href="@Url.Action("AddTopping", new { pizzaID = Model.Pizza.ID, toppingName = t.Name })">@t.Name</a>
                </div>
            }
            else
            {
                <div class="col-3">
                    <a href="#" data-toggle="modal" data-target="#MaxToppingsModal">@t.Name</a>
                </div>
            }
        }

        @Html.Partial("_ModalsPartial")

    </article><!--/#Toppingss-->