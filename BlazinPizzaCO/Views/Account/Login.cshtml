@using BlazinPizzaCO.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<section id="Login">
    <div class="PageContainer container-fluid">
        <div class="PageRow row">

            <article class="PageHead col-xl-10 offset-1">
                <a class="BackButton" href="@Url.Action("Home", "Blazin")">BACK</a>
                <h2 class="Header">SIGN IN</h2>
            </article>


            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "col-md-10 offset-1", role = "form" }))
            {
                @Html.AntiForgeryToken()
                

                <div class="Form form-row">

                    <div class="form-group col-md-10 offset-1">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", autocomplete = "off" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-10 offset-1">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", autocomplete = "off" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group col-md-10 offset-1">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>

                </div>

                <div class="Done form-group col-10 offset-1">
                    <input type="submit" value="Sign In" class="Confirm btn btn-default" />
                </div>

                <div class="Register col-10 offset-1">
                    @Html.ActionLink("Register as a new user", "Register")
                </div>
            }
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $(document).ready(function () {
            $(".nav-link.active").removeClass("active");
            $(".nav-link.Login").addClass("active");
        })
    </script>
}